        <!-- Priority Levels -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-flag me-2"></i>Mức độ ưu tiên</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <span class="badge bg-danger">Khẩn cấp</span>
