                </div>
                <div class="mb-2">
                    <span class="badge bg-success">Thấp</span>
                    <small class="text-muted ms-2">Xử lý khi có thời gian</small>
                </div>
            </div>
        </div>

        <!-- Status -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Trạng thái</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <span class="badge bg-info">Mới</span>
                    <small class="text-muted ms-2">Yêu cầu mới tạo</small>
                </div>
                <div class="mb-2">
                    <span class="badge bg-primary">Đang xử lý</span>
                    <small class="text-muted ms-2">Đang được thực hiện</small>
                </div>
                <div class="mb-2">
                    <span class="badge bg-warning">Chờ phê duyệt</span>
