<link rel="stylesheet" href="/css/modern-table.css">

<div class="content-header">
    <div>
        <h1 class="page-title">
            <i class="fas fa-user-edit me-2"></i>
            Chỉnh sửa người dùng
        </h1>
        <p class="page-subtitle">Cập nhật thông tin và phân quyền</p>
    </div>
    <div class="content-actions">
        <a href="/users/{{editUser.Id}}" class="btn btn-secondary">
            <i class="fas fa-times me-2"></i>Hủy
        </a>
    </div>
</div>

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show">
    <i class="fas fa-exclamation-circle me-2"></i>{{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <form action="/users/{{editUser.Id}}" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
            
            <!-- Personal Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>Thông tin cá nhân
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Avatar -->
                        <div class="col-12 text-center">
                            <div class="mb-3">
                                {{#if editUser.Avatar}}
                                <img src="{{editUser.Avatar}}" alt="Avatar" id="avatarPreview"
                                     class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                                {{else}}
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                     id="avatarPreview"
                                     style="width: 120px; height: 120px; font-size: 3rem;">
                                    {{substring editUser.UserName 0 1}}
                                </div>
                                {{/if}}
                            </div>
                            <div>
                                <label for="avatarUpload" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-camera me-2"></i>Thay đổi ảnh đại diện
                                </label>
                                <input type="file" id="avatarUpload" name="avatar" accept="image/*" 
                                       class="d-none" onchange="previewAvatar(this)">
                                <div class="form-text">JPG, PNG hoặc GIF. Tối đa 2MB</div>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-user me-2"></i>Tên đăng nhập <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" name="userName" 
                                   value="{{editUser.UserName}}" required>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email <span class="text-danger">*</span>
                            </label>
                            <input type="email" class="form-control" name="email" 
                                   value="{{editUser.Email}}" required>
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-phone me-2"></i>Số điện thoại
                            </label>
                            <input type="tel" class="form-control" name="phoneNumber" 
                                   value="{{editUser.PhoneNumber}}">
                        </div>

                        <!-- Home Address -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-home me-2"></i>Địa chỉ
                            </label>
                            <input type="text" class="form-control" name="homeAdress" 
                                   value="{{editUser.HomeAdress}}">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Work Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-briefcase me-2"></i>Thông tin công việc
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Department -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-building me-2"></i>Phòng ban
                            </label>
                            <select class="form-select" name="departmentId">
                                <option value="">-- Chọn phòng ban --</option>
                                {{#each departments}}
                                <option value="{{DepartmentID}}" 
                                        {{#ifEquals DepartmentID ../editUser.DepartmentID}}selected{{/ifEquals}}>
                                    {{Name}}
                                </option>
                                {{/each}}
                            </select>
                        </div>

                        <!-- Position -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-id-badge me-2"></i>Chức vụ
                            </label>
                            <input type="text" class="form-control" name="position" 
                                   value="{{editUser.Position}}" placeholder="Ví dụ: Nhân viên, Trưởng phòng...">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Permissions & Security -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Phân quyền & Bảo mật
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Roles -->
                        <div class="col-md-12">
                            <label class="form-label">
                                <i class="fas fa-user-tag me-2"></i>Vai trò
                            </label>
                            <div class="row">
                                {{#each roles}}
                                <div class="col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" 
                                               name="roles[]" value="{{Id}}" id="role{{Id}}"
                                               {{#if (includes ../userRoles Id)}}checked{{/if}}>
                                        <label class="form-check-label" for="role{{Id}}">
                                            <strong>{{Name}}</strong>
                                            {{#if Description}}
                                            <small class="d-block text-muted">{{Description}}</small>
                                            {{/if}}
                                        </label>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <!-- Admin Status -->
                        <div class="col-12">
                            <div class="alert alert-warning">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" 
                                           name="isAdmin" id="isAdmin" 
                                           {{#if editUser.isAdmin}}checked{{/if}}>
                                    <label class="form-check-label" for="isAdmin">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        <strong>Quản trị viên hệ thống</strong>
                                        <small class="d-block text-muted">
                                            Admin có toàn quyền truy cập và quản lý mọi chức năng trong hệ thống
                                        </small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Active Status -->
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" 
                                       name="isActive" id="isActive" 
                                       {{#if editUser.IsActive}}checked{{/if}}>
                                <label class="form-check-label" for="isActive">
                                    <i class="fas fa-toggle-on me-2"></i>
                                    <strong>Kích hoạt tài khoản</strong>
                                    <small class="d-block text-muted">
                                        Chỉ tài khoản được kích hoạt mới có thể đăng nhập và sử dụng hệ thống
                                    </small>
                                </label>
                            </div>
                        </div>

                        <!-- Email Confirmed -->
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" 
                                       name="emailConfirmed" id="emailConfirmed" 
                                       {{#if editUser.EmailConfirmed}}checked{{/if}}>
                                <label class="form-check-label" for="emailConfirmed">
                                    <i class="fas fa-envelope-open-text me-2"></i>
                                    <strong>Email đã xác thực</strong>
                                    <small class="d-block text-muted">
                                        Đánh dấu email người dùng đã được xác thực
                                    </small>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Change Password (Optional) -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-key me-2"></i>Đổi mật khẩu
                        <small class="text-muted">(Tùy chọn - Để trống nếu không đổi)</small>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control" name="newPassword" 
                                   id="newPassword" minlength="6">
                            <div class="form-text">Tối thiểu 6 ký tự</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" name="confirmPassword" 
                                   id="confirmPassword">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-2"></i>
                                Các trường có dấu <span class="text-danger">*</span> là bắt buộc
                            </small>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/users/{{editUser.Id}}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
// Preview avatar when file selected
function previewAvatar(input) {
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
            const preview = document.getElementById('avatarPreview');
            preview.innerHTML = `<img src="${e.target.result}" class="rounded-circle" 
                                style="width: 120px; height: 120px; object-fit: cover;">`;
        };
        
        reader.readAsDataURL(input.files[0]);
    }
}

// Password confirmation validation
document.querySelector('form').addEventListener('submit', function(e) {
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    
    if (newPassword && newPassword !== confirmPassword) {
        e.preventDefault();
        alert('Mật khẩu xác nhận không khớp!');
        return false;
    }
    
    if (newPassword && newPassword.length < 6) {
        e.preventDefault();
        alert('Mật khẩu phải có ít nhất 6 ký tự!');
        return false;
    }
});
</script>

<style>
.card {
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border-radius: 12px;
}

.card-header {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 1.5rem;
}

.form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.form-check-label strong {
    color: #1f2937;
}

.alert-warning {
    background-color: #fff3cd;
    border-color: #ffc107;
}
</style>
