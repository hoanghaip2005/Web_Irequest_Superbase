<script>
  // Load chat from URL params on page load
  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const chatId = urlParams.get('chat');
    const chatType = urlParams.get('type');
    
    if (chatId && chatType) {
      // Mark the chat item as active
      document.querySelectorAll('.chat-item').forEach(item => {
        const itemChatId = item.getAttribute('onclick').match(/'([^']+)'/)?.[1];
        if (itemChatId === chatId) {
          item.classList.add('active');
        }
      });
      
      // Load the chat
      currentChatId = chatId;
      currentChatType = chatType;
      
      if (chatType === 'direct') {
        loadDirectChat(chatId);
      } else if (chatType === 'group') {
        loadGroupChat(chatId);
      }
    }
  });
</script>
