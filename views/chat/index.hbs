<link rel="stylesheet" href="/css/chat.css">

<script>
  // Set current user ID for JavaScript
  window.currentUserId = '{{user.Id}}';
</script>

<div class="chat-container">
    <div class="row h-100">
        <!-- Chat Sidebar -->
        <div class="col-lg-4 col-md-5 border-end">
            <div class="chat-sidebar">
                <!-- Search and New Chat -->
                <div class="chat-sidebar-header p-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Tin nhắn</h5>
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newChatModal"
                                title="Tạo nhóm trò chuyện">
                            <i class="fas fa-users me-1"></i>Tạo nhóm
                        </button>
                    </div>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="chatSearch" 
                               placeholder="Tìm kiếm cuộc trò chuyện...">
                    </div>
                </div>

                <!-- Chat Tabs -->
                <ul class="nav nav-tabs px-3 pt-3" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#direct-chats" type="button">
                            Trực tiếp
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#group-chats" type="button">
                            Nhóm
                        </button>
                    </li>
                </ul>

                <!-- Chat List -->
                <div class="tab-content">
                    <!-- Direct Chats -->
                    <div class="tab-pane fade show active" id="direct-chats">
                        <div class="chat-list">
                            {{#if directChats}}
                            {{#each directChats}}
                            <div class="chat-item {{#if active}}active{{/if}}" onclick="loadChat('{{UserId}}', 'direct', event)">
                                <div class="d-flex align-items-center">
                                    <div class="position-relative">
                                        {{#if AvatarPath}}
                                        <img src="{{AvatarPath}}" class="chat-avatar rounded-circle" alt="{{name}}">
                                        {{else}}
                                        <div class="chat-avatar {{#if AvatarColor}}{{AvatarColor}}{{else}}bg-primary{{/if}}">
                                            {{substring name 0 1}}
                                        </div>
                                        {{/if}}
                                        {{#if online}}
                                        <span class="online-indicator"></span>
                                        {{/if}}
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="mb-0">{{name}}</h6>
                                            <small class="text-muted mx-3">{{formatTime lastMessageTime}}</small>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <p class="mb-0 text-muted small text-truncate">{{lastMessage}}</p>
                                            {{#if (gt unreadCount 0)}}
                                            <span class="badge bg-primary rounded-pill">{{unreadCount}}</span>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            {{else}}
                            <div class="text-center py-5">
                                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Chưa có cuộc trò chuyện nào</p>
                            </div>
                            {{/if}}
                        </div>
                    </div>

                    <!-- Group Chats -->
                    <div class="tab-pane fade" id="group-chats">
                        <div class="chat-list">
                            {{#if groupChats}}
                            {{#each groupChats}}
                            <div class="chat-item {{#if active}}active{{/if}}" onclick="loadChat('{{id}}', 'group', event)">
                                <div class="d-flex align-items-center">
                                    <div class="chat-avatar bg-secondary">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="mb-0">{{name}}</h6>
                                            <small class="text-muted">{{formatTime lastMessageTime}}</small>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <p class="mb-0 text-muted small text-truncate">
                                                <strong>{{lastMessageUser}}:</strong> {{lastMessage}}
                                            </p>
                                            {{#if unreadCount}}
                                            <span class="badge bg-primary rounded-pill">{{unreadCount}}</span>
                                            {{/if}}
                                        </div>
                                        <small class="text-muted">{{memberCount}} thành viên</small>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            {{else}}
                            <div class="text-center py-5">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Chưa có nhóm chat nào</p>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chat Content -->
        <div class="col-lg-5 col-md-7 h-100" id="chatContentColumn">
            <div class="chat-content h-100 d-flex flex-column" id="chatContent">
                {{#if currentChat}}
                <!-- Chat Header -->
                <div class="chat-header p-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            {{#if currentChat.isGroup}}
                            <div class="chat-avatar me-3 bg-info">
                                <i class="fas fa-users"></i>
                            </div>
                            {{else}}
                            {{#if currentChat.AvatarPath}}
                            <img src="{{currentChat.AvatarPath}}" class="chat-avatar me-3 rounded-circle" alt="{{currentChat.name}}">
                            {{else}}
                            <div class="chat-avatar me-3 {{#if currentChat.AvatarColor}}{{currentChat.AvatarColor}}{{else}}bg-primary{{/if}}">
                                {{substring currentChat.name 0 1}}
                            </div>
                            {{/if}}
                            {{/if}}
                            <div>
                                <h6 class="mb-0">{{currentChat.name}}</h6>
                                {{#if currentChat.isGroup}}
                                <small class="text-muted">{{currentChat.memberCount}} thành viên</small>
                                {{else}}
                                <small class="text-muted">{{currentChat.Email}}</small>
                                {{/if}}
                            </div>
                        </div>
                        <button class="btn btn-light btn-sm" type="button" onclick="toggleChatInfo()">
                            <i class="fas fa-info-circle"></i>
                        </button>
                    </div>
                </div>

                <!-- Chat Messages -->
                <div class="chat-messages p-3" id="chatMessages">
                    {{#each currentChat.messages}}
                    <div class="message {{#if (eq SenderId ../user.Id)}}message-sent{{else}}message-received{{/if}}">
                        {{#unless (eq SenderId ../user.Id)}}
                        {{#if senderAvatar}}
                        <img src="{{senderAvatar}}" class="message-avatar" alt="{{senderName}}">
                        {{else}}
                        <div class="message-avatar {{#if senderColor}}{{senderColor}}{{else}}bg-primary{{/if}}">
                            {{substring senderName 0 1}}
                        </div>
                        {{/if}}
                        {{/unless}}
                        <div class="message-content">
                            {{#unless (eq SenderId ../user.Id)}}
                            <div class="message-sender">{{senderName}}</div>
                            {{/unless}}
                            <div class="message-bubble">
                                <p class="mb-0">{{Message}}</p>
                            </div>
                            <div class="message-time">
                                {{formatTime CreatedAt}}
                                {{#if (eq SenderId ../user.Id)}}
                                {{#if IsRead}}
                                <i class="fas fa-check-double text-info"></i>
                                {{else}}
                                <i class="fas fa-check"></i>
                                {{/if}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="text-center py-5">
                        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Chưa có tin nhắn nào. Bắt đầu cuộc trò chuyện!</p>
                    </div>
                    {{/each}}
                </div>

                <!-- Chat Input -->
                <div class="chat-input">
                    <!-- File/Image Preview Area -->
                    <div id="filePreviewArea" class="file-preview-area d-none">
                        <div class="file-preview-container">
                            <div id="filePreviewList" class="file-preview-list"></div>
                        </div>
                    </div>

                    <form id="chatForm" onsubmit="sendMessage(event)">
                        <div class="d-flex align-items-end gap-2">
                            <!-- Attachment Buttons -->
                            <button type="button" class="btn btn-light btn-icon" onclick="attachFile()" title="Đính kèm file">
                                <i class="fas fa-paperclip"></i>
                            </button>
                            <button type="button" class="btn btn-light btn-icon" onclick="attachImage()" title="Gửi hình ảnh">
                                <i class="fas fa-image"></i>
                            </button>
                            
                            <!-- Message Input -->
                            <div class="flex-grow-1">
                                <textarea class="form-control" id="messageInput" rows="1"
                                   placeholder="Nhập tin nhắn..." autocomplete="off"></textarea>
                            </div>
                            
                            <!-- Emoji Button -->
                            <button type="button" class="btn btn-light btn-icon" onclick="insertEmoji()" title="Chèn emoji">
                                <i class="fas fa-smile"></i>
                            </button>
                            
                            <!-- Send Button -->
                            <button type="submit" class="btn btn-primary btn-icon">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                        <input type="file" id="fileInput" class="d-none" multiple onchange="handleFileSelect(event)">
                        <input type="file" id="imageInput" class="d-none" accept="image/*" multiple onchange="handleImageSelect(event)">
                    </form>
                    <div id="typingIndicator" class="typing-indicator d-none">
                        <small class="text-muted"><i>Đang nhập...</i></small>
                    </div>
                </div>
                {{else}}
                <!-- No Chat Selected -->
                <div class="d-flex align-items-center justify-content-center h-100">
                    <div class="text-center">
                        <i class="fas fa-comments fa-5x text-muted mb-4"></i>
                        <h4 class="text-muted">Chọn một cuộc trò chuyện</h4>
                        <p class="text-muted">Chọn người dùng từ danh sách bên trái để bắt đầu trò chuyện</p>
                        <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#newChatModal">
                            <i class="fas fa-users me-2"></i>Tạo nhóm trò chuyện
                        </button>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>

        <!-- Chat Info Sidebar -->
        <div class="col-lg-3 border-start chat-info-sidebar d-none" id="chatInfoSidebar">
            <div class="chat-info-content">
                <!-- User/Group Header -->
                <div class="chat-info-header text-center p-4 border-bottom">
                    {{#if currentChat}}
                    {{#if currentChat.isGroup}}
                    <div class="chat-info-avatar mx-auto mb-3 bg-info">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    {{else}}
                    {{#if currentChat.AvatarPath}}
                    <img src="{{currentChat.AvatarPath}}" class="chat-info-avatar mx-auto mb-3" alt="{{currentChat.name}}">
                    {{else}}
                    <div class="chat-info-avatar mx-auto mb-3 {{#if currentChat.AvatarColor}}{{currentChat.AvatarColor}}{{else}}bg-primary{{/if}}">
                        {{substring currentChat.name 0 1}}
                    </div>
                    {{/if}}
                    {{/if}}
                    <h5 class="mb-1">{{currentChat.name}}</h5>
                    {{#if currentChat.isGroup}}
                    <small class="text-muted">{{currentChat.memberCount}} thành viên</small>
                    {{else}}
                    <small class="text-muted">{{currentChat.Email}}</small>
                    {{/if}}
                    {{/if}}
                </div>

                <!-- Action Buttons -->
                <div class="chat-info-actions p-3 border-bottom">
                    <div class="row g-2 text-center">
                        <div class="col-4">
                            <button class="btn btn-light w-100" onclick="toggleNotifications()">
                                <i class="fas fa-bell d-block mb-1"></i>
                                <small>Tắt thông báo</small>
                            </button>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-light w-100" onclick="pinChat()">
                                <i class="fas fa-thumbtack d-block mb-1"></i>
                                <small>Ghim hội thoại</small>
                            </button>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-light w-100" onclick="openCreateGroupModal()">
                                <i class="fas fa-user-plus d-block mb-1"></i>
                                <small>Tạo nhóm trò chuyện</small>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Info Sections -->
                <div class="chat-info-sections">
                    <!-- Reminders Section -->
                    <div class="info-section border-bottom">
                        <div class="info-section-header" onclick="toggleInfoSection('reminders')">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock me-2"></i>
                                <span>Danh sách nhắc hẹn</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="info-section-content collapse" id="reminders">
                            <p class="text-muted text-center py-3">
                                <i class="fas fa-clock fa-2x mb-2 d-block"></i>
                                Chưa có nhắc hẹn nào
                            </p>
                        </div>
                    </div>

                    <!-- Common Groups Section -->
                    <div class="info-section border-bottom">
                        <div class="info-section-header" onclick="toggleInfoSection('groups')">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-users me-2"></i>
                                <span id="groupsCountLabel">Nhóm chung</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="info-section-content collapse" id="groups">
                            <div id="groupsList" class="p-2">
                                <p class="text-muted text-center py-2">Đang tải...</p>
                            </div>
                        </div>
                    </div>

                    <!-- Images/Videos Section -->
                    <div class="info-section border-bottom">
                        <div class="info-section-header" onclick="toggleInfoSection('media')">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-image me-2"></i>
                                <span>Ảnh/Video</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="info-section-content collapse" id="media">
                            <div id="mediaList" class="p-2">
                                <p class="text-muted text-center py-3">
                                    <i class="fas fa-image fa-2x mb-2 d-block"></i>
                                    Chưa có ảnh/video nào
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Files Section -->
                    <div class="info-section border-bottom">
                        <div class="info-section-header" onclick="toggleInfoSection('files')">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-file me-2"></i>
                                <span>File</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="info-section-content collapse" id="files">
                            <div id="filesList" class="p-2">
                                <p class="text-muted text-center py-3">
                                    <i class="fas fa-file fa-2x mb-2 d-block"></i>
                                    Chưa có file nào
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Links Section -->
                    <div class="info-section border-bottom">
                        <div class="info-section-header" onclick="toggleInfoSection('links')">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-link me-2"></i>
                                <span>Link</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="info-section-content collapse" id="links">
                            <div id="linksList" class="p-2">
                                <p class="text-muted text-center py-3">
                                    <i class="fas fa-link fa-2x mb-2 d-block"></i>
                                    Chưa có link nào
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Security Settings Section -->
                    <div class="info-section">
                        <div class="info-section-header" onclick="toggleInfoSection('security')">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-shield-alt me-2"></i>
                                <span>Thiết lập bảo mật</span>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="info-section-content collapse" id="security">
                            <div class="p-3">
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <div>
                                        <i class="fas fa-user-secret me-2"></i>
                                        <span>Tin nhắn tự xóa</span>
                                    </div>
                                    <small class="text-muted">Không bao giờ</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bottom Actions -->
                <div class="chat-info-bottom-actions p-3 border-top">
                    <button class="btn btn-outline-danger w-100 mb-2" onclick="clearChatHistory()">
                        <i class="fas fa-broom me-2"></i>Xóa lịch sử trò chuyện
                    </button>
                    <button class="btn btn-outline-danger w-100" onclick="deleteChat()">
                        <i class="fas fa-trash me-2"></i>Xóa cuộc trò chuyện
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Group Modal -->
<div class="modal fade" id="newChatModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title text-white">
                    <i class="fas fa-users me-2"></i>Tạo nhóm trò chuyện
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="newGroupForm" onsubmit="createGroup(event)">
                    <div class="mb-3">
                        <label for="groupName" class="form-label fw-semibold">
                            <i class="fas fa-tag me-2 text-primary"></i>Tên nhóm
                        </label>
                        <input type="text" class="form-control" id="groupName" 
                               placeholder="Nhập tên nhóm..." required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="groupDescription" class="form-label fw-semibold">
                            <i class="fas fa-align-left me-2 text-primary"></i>Mô tả (tùy chọn)
                        </label>
                        <textarea class="form-control" id="groupDescription" rows="2"
                                  placeholder="Mô tả về nhóm..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-user-plus me-2 text-primary"></i>Thêm thành viên
                        </label>
                        <input type="text" class="form-control mb-2" id="memberSearch" 
                               placeholder="Tìm kiếm người dùng..." onkeyup="searchMembers(this.value)">
                        
                        <div id="memberList" class="list-group mb-3" style="max-height: 200px; overflow-y: auto;">
                            <!-- Member list will be populated here -->
                        </div>
                        
                        <div id="selectedMembers" class="d-flex flex-wrap gap-2">
                            <!-- Selected members will appear here as badges -->
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="createGroupBtn">
                            <i class="fas fa-check-circle me-2"></i>Tạo nhóm
                        </button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Hủy
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.chat-container {
    height: calc(100vh - 120px);
    background: white;
    border-radius: 8px;
    overflow: hidden;
}

.chat-sidebar {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.chat-list {
    flex: 1;
    overflow-y: auto;
}

.chat-item {
    padding: 1rem;
    cursor: pointer;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.2s;
}

.chat-item:hover {
    background-color: #f8f9fa;
}

.chat-item.active {
    background-color: #e3f2fd;
}

.chat-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #c38d61 0%, #bc7839 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
}

.online-indicator {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 12px;
    height: 12px;
    background-color: #28a745;
    border: 2px solid white;
    border-radius: 50%;
}

.chat-content {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    background-color: #f8f9fa;
}

.message {
    display: flex;
    margin-bottom: 1rem;
    clear: both;
    animation: messageSlideIn 0.3s ease-out;
}

@keyframes messageSlideIn {
    from {
        opacity: 0;
        transform: translateY(15px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* Tin nhắn người nhận - căn trái */
.message-received {
    justify-content: flex-start;
    padding-right: 20%;
}

/* Tin nhắn người gửi - căn phải */
.message-sent {
    justify-content: flex-end;
    padding-left: 80%;
    flex-direction: row-reverse;
}

/* Avatar styles */
.message-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    font-weight: 600;
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    object-fit: cover;
    align-self: flex-end;
}

.message-received .message-avatar {
    margin-right: 0.5rem;
    order: 1;
}

.message-sent .message-avatar {
    margin-left: 0.5rem;
    order: 2;
}

.message-content {
    display: flex;
    flex-direction: column;
    max-width: 100%;
    order: 2;
}

.message-sent .message-content {
    align-items: flex-end;
    order: 1;
}

.message-received .message-content {
    align-items: flex-start;
}

.message-sender {
    font-size: 0.75rem;
    font-weight: 500;
    color: #666;
    margin-bottom: 0.25rem;
    padding: 0 0.5rem;
}

.message-bubble {
    padding: 0.5rem 0.75rem;
    border-radius: 18px;
    word-wrap: break-word;
    line-height: 1.35;
    width: fit-content;
    max-width: 100%;
    position: relative;
    transition: transform 0.2s ease;
    display: inline-block;
    vertical-align: top;
}

.message-bubble:hover {
    transform: scale(1.02);
}

.message-received .message-bubble {
    background-color: #f0f0f0;
