<link rel="stylesheet" href="/css/modern-table.css">

<div class="content-header">
    <div>
        <h1 class="page-title">
            <i class="fas fa-edit me-2"></i>
            Chỉnh sửa phòng ban
        </h1>
        <p class="page-subtitle">Cập nhật thông tin phòng ban</p>
    </div>
    <div class="content-actions">
        <a href="/departments/{{department.DepartmentID}}" class="btn btn-secondary">
            <i class="fas fa-times me-2"></i>Hủy
        </a>
    </div>
</div>

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show">
    <i class="fas fa-exclamation-circle me-2"></i>{{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <form action="/departments/{{department.DepartmentID}}" method="POST" id="editDepartmentForm">
            <input type="hidden" name="_method" value="PUT">
            
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Department Name -->
                        <div class="col-12">
                            <label class="form-label">
                                <i class="fas fa-building me-2"></i>Tên phòng ban <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" name="name" 
                                   value="{{department.Name}}" required>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label class="form-label">
                                <i class="fas fa-align-left me-2"></i>Mô tả
                            </label>
                            <textarea class="form-control" name="description" rows="4"
                                      placeholder="Nhập mô tả về phòng ban, chức năng, nhiệm vụ...">{{department.Description}}</textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-user-tie me-2"></i>Quản lý
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Manager -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-user-shield me-2"></i>Trưởng phòng
                            </label>
                            <select class="form-select" name="managerId">
                                <option value="">-- Chọn trưởng phòng --</option>
                                {{#each users}}
                                <option value="{{Id}}" 
                                        {{#ifEquals Id ../department.AssignedUserId}}selected{{/ifEquals}}>
                                    {{UserName}} ({{Email}})
                                </option>
                                {{/each}}
                            </select>
                            <div class="form-text">
                                Trưởng phòng có quyền quản lý nhân viên trong phòng ban
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-toggle-on me-2"></i>Trạng thái
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" 
                                       name="isActive" id="isActive" 
                                       {{#if department.IsActive}}checked{{/if}}>
                                <label class="form-check-label" for="isActive">
                                    <strong>Phòng ban đang hoạt động</strong>
                                    <small class="d-block text-muted">
                                        Chỉ phòng ban hoạt động mới được hiển thị trong hệ thống
                                    </small>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employees Summary (Read-only) -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Nhân viên
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Hiện có <strong>{{employeeCount}}</strong> nhân viên trong phòng ban này.
                        Để thay đổi phòng ban của nhân viên, vui lòng vào trang quản lý nhân viên.
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-2"></i>
                                Các trường có dấu <span class="text-danger">*</span> là bắt buộc
                            </small>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/departments/{{department.DepartmentID}}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
// Form validation
document.getElementById('editDepartmentForm').addEventListener('submit', function(e) {
    const name = document.querySelector('input[name="name"]').value.trim();
    
    if (!name) {
        e.preventDefault();
        alert('Vui lòng nhập tên phòng ban!');
        return false;
    }
    
    return true;
});
</script>

<style>
.card {
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border-radius: 12px;
}

.card-header {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 1.5rem;
}

.form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}
</style>
