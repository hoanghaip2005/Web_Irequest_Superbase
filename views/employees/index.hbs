<script>
function editUser(user) {
    document.getElementById('editUserId').value = user.Id;
    document.getElementById('editUsername').value = user.UserName;
    document.getElementById('editFullName').value = user.Email;
    document.getElementById('editEmail').value = user.Email;
    document.getElementById('editPhone').value = user.PhoneNumber || '';
    document.getElementById('editDepartmentId').value = user.DepartmentID || '';
    document.getElementById('editRoleId').value = user.RoleId || '';
    document.getElementById('editAddress').value = user.HomeAdress || '';
    document.getElementById('editIsActive').checked = user.EmailConfirmed;
    
    const modal = new bootstrap.Modal(document.getElementById('editUserModal'));
    modal.show();
}

function resetPassword(userId, email) {
    if (confirm(`Bạn có chắc chắn muốn đặt lại mật khẩu cho "${email}"?`)) {
        fetch(`/employees/${userId}/reset-password`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert(`Mật khẩu mới: ${data.newPassword}\nVui lòng sao chép và cung cấp cho nhân viên.`);
            } else {
                alert('Lỗi: ' + data.message);
            }
        })
        .catch(err => {
            console.error('Error:', err);
            alert('Có lỗi xảy ra khi đặt lại mật khẩu');
        });
    }
}

function toggleUserStatus(userId, currentStatus, email) {
    const action = currentStatus ? 'vô hiệu hóa' : 'kích hoạt';
    if (confirm(`Bạn có chắc chắn muốn ${action} tài khoản "${email}"?`)) {
        fetch(`/employees/${userId}/toggle-status`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ currentStatus })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Lỗi: ' + data.message);
            }
        })
        .catch(err => {
            console.error('Error:', err);
            alert('Có lỗi xảy ra');
        });
    }
}

// Validate password match
document.getElementById('addUserModal').querySelector('form').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    
    if (password !== confirmPassword) {
        e.preventDefault();
        alert('Mật khẩu xác nhận không khớp!');
    }
});
</script>
