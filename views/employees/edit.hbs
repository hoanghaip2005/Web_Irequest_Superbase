<link rel="stylesheet" href="/css/modern-table.css">

<div class="content-header">
    <div>
        <h1 class="page-title">
            <i class="fas fa-user-edit me-2"></i>
            Chỉnh sửa nhân viên
        </h1>
        <p class="page-subtitle">Cập nhật thông tin nhân viên</p>
    </div>
    <div class="content-actions">
        <a href="/employees/{{employee.Id}}" class="btn btn-secondary">
            <i class="fas fa-times me-2"></i>Hủy
        </a>
    </div>
</div>

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show">
    <i class="fas fa-exclamation-circle me-2"></i>{{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<div class="row">
    <div class="col-lg-10 mx-auto">
        <form action="/employees/{{employee.Id}}" method="POST" enctype="multipart/form-data" id="editEmployeeForm">
            <input type="hidden" name="_method" value="PUT">
            
            <!-- Personal Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>Thông tin cá nhân
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Avatar Upload -->
                        <div class="col-12 text-center">
                            <div class="mb-3">
                                {{#if employee.Avatar}}
                                <img src="{{employee.Avatar}}" alt="Avatar" id="avatarPreview"
                                     class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                                {{else}}
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                     id="avatarPlaceholder"
                                     style="width: 120px; height: 120px; font-size: 3rem;">
                                    {{substring employee.UserName 0 1}}
                                </div>
                                {{/if}}
                            </div>
                            <div>
                                <label for="avatarUpload" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-camera me-2"></i>Thay đổi ảnh đại diện
                                </label>
                                <input type="file" id="avatarUpload" name="avatar" accept="image/*" 
                                       class="d-none" onchange="previewAvatar(this)">
                                <div class="form-text">JPG, PNG hoặc GIF. Tối đa 2MB</div>
                            </div>
                        </div>

                        <!-- Username -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-user me-2"></i>Tên đăng nhập <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" name="username" 
                                   value="{{employee.UserName}}" required>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email <span class="text-danger">*</span>
                            </label>
                            <input type="email" class="form-control" name="email" 
                                   value="{{employee.Email}}" required>
                        </div>

                        <!-- Phone Number -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-phone me-2"></i>Số điện thoại
                            </label>
                            <input type="tel" class="form-control" name="phone" 
                                   value="{{employee.PhoneNumber}}" placeholder="+84 xxx xxx xxx">
                        </div>

                        <!-- Home Address -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-home me-2"></i>Địa chỉ
                            </label>
                            <input type="text" class="form-control" name="address" 
                                   value="{{employee.HomeAdress}}" placeholder="Địa chỉ nhà riêng">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Work Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-briefcase me-2"></i>Thông tin công việc
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Department -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-building me-2"></i>Phòng ban
                            </label>
                            <select class="form-select" name="department">
                                <option value="">-- Chọn phòng ban --</option>
                                {{#each departments}}
                                <option value="{{DepartmentID}}" 
                                        {{#ifEquals DepartmentID ../employee.DepartmentID}}selected{{/ifEquals}}>
                                    {{Name}}
                                </option>
                                {{/each}}
                            </select>
                        </div>

                        <!-- Position -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-id-badge me-2"></i>Chức vụ
                            </label>
                            <input type="text" class="form-control" name="position" 
                                   value="{{employee.Position}}" 
                                   placeholder="Ví dụ: Nhân viên, Trưởng phòng...">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Roles & Permissions -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Vai trò & Phân quyền
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Roles Selection -->
                        <div class="col-12">
                            <label class="form-label">
                                <i class="fas fa-user-tag me-2"></i>Vai trò trong hệ thống
                            </label>
                            <div class="row">
                                {{#each roles}}
                                <div class="col-md-6 mb-3">
                                    <div class="form-check p-3 border rounded">
                                        <input class="form-check-input" type="checkbox" 
                                               name="roles[]" value="{{Id}}" id="role{{Id}}"
                                               {{#if (includes ../employeeRoles Id)}}checked{{/if}}>
                                        <label class="form-check-label w-100" for="role{{Id}}">
                                            <div class="d-flex align-items-start">
                                                <div class="flex-grow-1">
                                                    <strong class="d-block">{{Name}}</strong>
                                                    {{#if Description}}
                                                    <small class="text-muted">{{Description}}</small>
                                                    {{/if}}
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <!-- Admin Privileges -->
                        <div class="col-12">
                            <div class="alert alert-warning mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" 
                                           name="isAdmin" id="isAdmin" 
                                           {{#if employee.isAdmin}}checked{{/if}}>
                                    <label class="form-check-label" for="isAdmin">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        <strong>Quyền Quản trị viên</strong>
                                        <small class="d-block text-muted mt-1">
                                            Quản trị viên có toàn quyền quản lý hệ thống, bao gồm: quản lý người dùng, 
                                            phòng ban, workflow và tất cả các yêu cầu trong hệ thống
                                        </small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Account Status -->
                        <div class="col-12">
                            <label class="form-label">
                                <i class="fas fa-toggle-on me-2"></i>Trạng thái tài khoản
                            </label>
                            
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" 
                                       name="isActive" id="isActive" 
                                       {{#if employee.IsActive}}checked{{/if}}>
                                <label class="form-check-label" for="isActive">
                                    <strong>Kích hoạt tài khoản</strong>
                                    <small class="d-block text-muted">
                                        Chỉ tài khoản được kích hoạt mới có thể đăng nhập
                                    </small>
                                </label>
                            </div>

                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" 
                                       name="emailConfirmed" id="emailConfirmed" 
                                       {{#if employee.EmailConfirmed}}checked{{/if}}>
                                <label class="form-check-label" for="emailConfirmed">
                                    <strong>Email đã xác thực</strong>
                                    <small class="d-block text-muted">
                                        Đánh dấu email người dùng đã được xác thực
                                    </small>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Password Change (Optional) -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-key me-2"></i>Đổi mật khẩu
                        <small class="text-muted">(Tùy chọn - Để trống nếu không muốn đổi)</small>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Chỉ điền vào phần này nếu bạn muốn thay đổi mật khẩu cho nhân viên
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control" name="newPassword" 
                                   id="newPassword" minlength="6" placeholder="Tối thiểu 6 ký tự">
                            <div class="form-text">
                                <i class="fas fa-lock me-1"></i>Mật khẩu phải có ít nhất 6 ký tự
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" name="confirmPassword" 
                                   id="confirmPassword" placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-2"></i>
                                Các trường có dấu <span class="text-danger">*</span> là bắt buộc
                            </small>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/employees/{{employee.Id}}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
// Avatar preview
function previewAvatar(input) {
    if (input.files && input.files[0]) {
        // Check file size (max 2MB)
        if (input.files[0].size > 2 * 1024 * 1024) {
            alert('Kích thước file không được vượt quá 2MB!');
            input.value = '';
            return;
        }

        const reader = new FileReader();
        
        reader.onload = function(e) {
            const placeholder = document.getElementById('avatarPlaceholder');
            const preview = document.getElementById('avatarPreview');
            
            if (placeholder) {
                placeholder.outerHTML = `<img src="${e.target.result}" id="avatarPreview" 
                                        class="rounded-circle" 
                                        style="width: 120px; height: 120px; object-fit: cover;">`;
            } else if (preview) {
                preview.src = e.target.result;
            }
        };
        
        reader.readAsDataURL(input.files[0]);
    }
}

// Form validation
document.getElementById('editEmployeeForm').addEventListener('submit', function(e) {
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    
    // Validate password if entered
    if (newPassword || confirmPassword) {
        if (newPassword !== confirmPassword) {
            e.preventDefault();
            alert('Mật khẩu xác nhận không khớp!');
            return false;
        }
        
        if (newPassword.length < 6) {
            e.preventDefault();
            alert('Mật khẩu phải có ít nhất 6 ký tự!');
            return false;
        }
    }
    
    // Validate email format
    const email = document.querySelector('input[name="email"]').value;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
        e.preventDefault();
        alert('Email không hợp lệ!');
        return false;
    }
    
    return true;
});

// Password strength indicator
document.getElementById('newPassword').addEventListener('input', function() {
    const password = this.value;
    const strengthDiv = document.getElementById('passwordStrength');
    
    if (password.length === 0) {
        if (strengthDiv) strengthDiv.remove();
        return;
    }
    
    let strength = 'Yếu';
    let color = 'danger';
    
    if (password.length >= 8) {
        strength = 'Trung bình';
        color = 'warning';
    }
    
    if (password.length >= 10 && /[A-Z]/.test(password) && /[0-9]/.test(password)) {
        strength = 'Mạnh';
        color = 'success';
    }
    
    if (!strengthDiv) {
        const div = document.createElement('div');
        div.id = 'passwordStrength';
        div.className = `small mt-1`;
        this.parentElement.appendChild(div);
    }
    
    document.getElementById('passwordStrength').innerHTML = 
        `<span class="text-${color}"><i class="fas fa-shield-alt me-1"></i>Độ mạnh: ${strength}</span>`;
});
</script>

<style>
.card {
    border: none;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    border-radius: 12px;
}

.card-header {
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 1.5rem;
}

.form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.form-check.border {
    transition: all 0.3s ease;
}

.form-check.border:hover {
    background-color: #f8f9fa;
}

.form-check-input:checked + .form-check-label {
    font-weight: 500;
}

.alert-warning {
    background-color: #fff3cd;
    border-color: #ffc107;
    border-left: 4px solid #ffc107;
}

.alert-info {
    background-color: #cfe2ff;
    border-color: #0dcaf0;
    border-left: 4px solid #0dcaf0;
}
</style>
