<!-- Calendar resources -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
<link rel="stylesheet" href="/css/calendar.css">

<script>
// View toggle functionality
let currentView = 'list';
let calendar = null;

// Initialize immediately when DOM is ready
(function() {
    'use strict';
    
    console.log('Script loaded');
    
    // Wait for DOM
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
    
    function init() {
        console.log('Initializing...');
        
        const listViewBtn = document.getElementById('listViewBtn');
        const kanbanViewBtn = document.getElementById('kanbanViewBtn');
        const calendarViewBtn = document.getElementById('calendarViewBtn');
        const listView = document.getElementById('listView');
        const calendarView = document.getElementById('calendarView');
        
        console.log('Elements found:', {
            listViewBtn: !!listViewBtn,
            kanbanViewBtn: !!kanbanViewBtn,
            calendarViewBtn: !!calendarViewBtn,
            listView: !!listView,
            calendarView: !!calendarView
        });
        
        if (!listViewBtn || !kanbanViewBtn || !calendarViewBtn || !listView || !calendarView) {
            console.error('Missing required elements!');
            return;
        }
        
        // Initialize view from URL or default to list
        const urlParams = new URLSearchParams(window.location.search);
        const viewParam = urlParams.get('view');
        
        if (viewParam === 'calendar') {
            switchToCalendar();
        } else {
            currentView = 'list';
            listView.style.display = 'block';
            calendarView.style.display = 'none';
            setActiveButton('list');
        }
        
        // Add event listeners
        listViewBtn.onclick = function(e) {
            if (e) {
                e.preventDefault();
                e.stopPropagation();
            }
            console.log('List view clicked');
            
            currentView = 'list';
            listView.style.display = 'block';
            calendarView.style.display = 'none';
            
            setActiveButton('list');
            
            updateURL('list');
            return false;
        };
        
        kanbanViewBtn.onclick = function(e) {
            if (e) {
                e.preventDefault();
                e.stopPropagation();
            }
            console.log('Kanban view clicked - redirecting to /requests/my/kanban');
            window.location.href = '/requests/my/kanban';
            return false;
        };
        
        calendarViewBtn.onclick = function(e) {
            if (e) {
                e.preventDefault();
                e.stopPropagation();
            }
            
            console.log('=== CALENDAR BUTTON CLICKED ===');
            console.log('Current view before switch:', currentView);
            console.log('About to call switchToCalendar()');
            
            try {
                switchToCalendar();
                console.log('switchToCalendar() completed successfully');
                console.log('Current view after switch:', currentView);
            } catch (error) {
                console.error('Error in switchToCalendar:', error);
            }
            return false;
        };
        
        function switchToCalendar() {
            console.log('Switching to calendar view...');
            currentView = 'calendar';
            
            listView.style.display = 'none';
            calendarView.style.display = 'block';
            
            setActiveButton('calendar');
            
            updateURL('calendar');
            
            if (!calendar) {
                console.log('Initializing calendar...');
                calendar = initializeCalendar();
            } else {
                console.log('Calendar already exists, just showing it');
            }
        }
        
        function setActiveButton(activeView) {
            // Remove all active states
            listViewBtn.classList.remove('btn-modern-primary');
            listViewBtn.classList.add('btn-modern-secondary');
            kanbanViewBtn.classList.remove('btn-modern-primary');
            kanbanViewBtn.classList.add('btn-modern-secondary');
            calendarViewBtn.classList.remove('btn-modern-primary');
            calendarViewBtn.classList.add('btn-modern-secondary');
            
            // Set active state
            if (activeView === 'list') {
                listViewBtn.classList.remove('btn-modern-secondary');
                listViewBtn.classList.add('btn-modern-primary');
            } else if (activeView === 'calendar') {
                calendarViewBtn.classList.remove('btn-modern-secondary');
                calendarViewBtn.classList.add('btn-modern-primary');
            }
        }
        
        function updateURL(view) {
            const url = new URL(window.location);
            url.searchParams.set('view', view);
            window.history.pushState({}, '', url);
        }
        
        // Auto refresh
        setInterval(() => {
            if (currentView === 'list') {
                const currentUrl = new URL(window.location);
                const hasFilters = currentUrl.searchParams.get('search') || 
                                  currentUrl.searchParams.get('status') || 
                                  currentUrl.searchParams.get('priority');
                if (!hasFilters) {
                    window.location.reload();
                }
            } else if (currentView === 'calendar' && calendar) {
                calendar.refetchEvents();
            }
        }, 30000);

        // Modern table functions
        function getCurrentFilters() {
            const params = new URLSearchParams();
            const search = document.getElementById('tableSearch')?.value;
            const status = document.getElementById('statusFilter')?.value;
            const priority = document.getElementById('priorityFilter')?.value;
            const workflow = document.getElementById('workflowFilter')?.value;
            
            if (search) params.set('search', search);
            if (status) params.set('status', status);
            if (priority) params.set('priority', priority);
            if (workflow) params.set('workflow', workflow);
            
            return params;
        }

        window.applyFilters = function() {
            const params = getCurrentFilters();
            params.set('page', 1);
            window.location.search = params.toString();
        };

        window.clearFilters = function() {
            window.location.href = '/requests/my';
        };

        // Search on Enter
        document.getElementById('tableSearch')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') applyFilters();
        });

        // Auto-submit on filter change
        document.getElementById('statusFilter')?.addEventListener('change', applyFilters);
        document.getElementById('priorityFilter')?.addEventListener('change', applyFilters);
        document.getElementById('workflowFilter')?.addEventListener('change', applyFilters);

        // Select all checkbox
        document.getElementById('selectAll')?.addEventListener('change', function(e) {
            const checkboxes = document.querySelectorAll('.modern-table tbody .table-checkbox');
            checkboxes.forEach(cb => cb.checked = e.target.checked);
        });

        // Sorting
        document.querySelectorAll('.sortable').forEach(th => {
            th.addEventListener('click', function() {
                const tbody = this.closest('table').querySelector('tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));
                if (rows.length === 0 || rows[0].cells.length === 1) return;
                
                const isAsc = this.classList.contains('sorted-asc');
                document.querySelectorAll('.sortable').forEach(t => {
                    t.classList.remove('sorted-asc', 'sorted-desc');
                });
                this.classList.add(isAsc ? 'sorted-desc' : 'sorted-asc');
                
                const colIndex = Array.from(this.parentElement.children).indexOf(this);
                rows.sort((a, b) => {
                    const aText = a.cells[colIndex]?.textContent.trim() || '';
                    const bText = b.cells[colIndex]?.textContent.trim() || '';
                    return isAsc ? bText.localeCompare(aText) : aText.localeCompare(bText);
                });
                
                rows.forEach(row => tbody.appendChild(row));
            });
        });

        // Pagination functions
        window.goToPage = function(page) {
            const params = getCurrentFilters();
            params.set('page', page);
            window.location.search = params.toString();
        };

        window.changePageSize = function(size) {
            const params = getCurrentFilters();
            params.set('limit', size);
            params.set('page', 1);
            window.location.search = params.toString();
        };
    }
})();
</script>

