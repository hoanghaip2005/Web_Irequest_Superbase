<div class="content-header">
    <div>
        <h1 class="page-title" id="pageTitle">Yêu cầu của tôi</h1>
        <p class="page-subtitle">Quản lý các yêu cầu bạn đã tạo</p>
    </div>
    <div class="content-actions">
        <div class="d-inline-flex gap-2 me-2">
            <button type="button" class="btn btn-outline-secondary active" id="listViewBtn" data-view="list">
                <i class="fas fa-list me-2"></i>Danh sách
            </button>
            <button type="button" class="btn btn-outline-secondary" id="kanbanViewBtn" data-view="kanban">
                <i class="fas fa-th me-2"></i>Kanban
            </button>
            <button type="button" class="btn btn-outline-secondary" id="calendarViewBtn" data-view="calendar">
                <i class="fas fa-calendar-alt me-2"></i>Lịch
            </button>
        </div>
        <a href="/requests/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Tạo yêu cầu mới
