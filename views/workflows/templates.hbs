<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="page-title">
                <i class="fas fa-layer-group me-2"></i>
                Mẫu Quy trình
            </h2>
            <p class="text-muted">Chọn mẫu quy trình có sẵn để tạo workflow mới nhanh chóng</p>
        </div>
        <div class="col-auto">
            <a href="/workflows" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
            <a href="/workflows/builder" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Tạo workflow mới
            </a>
        </div>
    </div>

    {{#if templates}}
    <div class="row">
        {{#each templates}}
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card template-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-sitemap text-primary me-2"></i>
                            {{WorkflowName}}
                        </h5>
                        <span class="badge bg-success">{{StepCount}} bước</span>
                    </div>
                    
                    {{#if Description}}
                    <p class="card-text text-muted mb-3">{{Description}}</p>
                    {{else}}
                    <p class="card-text text-muted mb-3 fst-italic">Chưa có mô tả</p>
                    {{/if}}

                    <div class="template-meta mb-3">
                        {{#if PriorityName}}
                        <span class="badge bg-info me-2">
                            <i class="fas fa-flag me-1"></i>{{PriorityName}}
                        </span>
                        {{/if}}
                        {{#if IsActive}}
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i>Đang hoạt động
                        </span>
                        {{/if}}
                    </div>

                    <div class="template-actions d-grid gap-2">
                        <a href="/workflows/{{WorkflowID}}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-2"></i>Xem chi tiết
                        </a>
                        <button class="btn btn-primary btn-sm" onclick="useTemplate({{WorkflowID}}, '{{WorkflowName}}')">
                            <i class="fas fa-copy me-2"></i>Sử dụng mẫu này
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Chưa có mẫu quy trình nào. <a href="/workflows/builder">Tạo quy trình mới</a>
    </div>
    {{/if}}
</div>

<style>
.template-card {
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    transition: all 0.3s ease;
}

.template-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-color: #667eea;
}

.template-card .card-title {
    color: #333;
    font-weight: 600;
}

.template-meta {
    border-top: 1px solid #e0e0e0;
    padding-top: 1rem;
}
</style>

<script>
function useTemplate(workflowId, workflowName) {
    if (confirm(`Bạn muốn tạo workflow mới dựa trên mẫu "${workflowName}"?`)) {
        // Redirect to create workflow with template parameter
        window.location.href = `/workflows/builder?template=${workflowId}`;
    }
}
</script>
