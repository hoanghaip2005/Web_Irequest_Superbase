function makeDraggable(element) {
    let pos1 = 0, pos2 = 0, pos3 = 0, pos4 = 0;
    let isDragging = false;
    
    element.onmousedown = dragMouseDown;
    
    function dragMouseDown(e) {
        // Don't interfere with text selection or input interactions or connection points
        if (e.target.tagName === 'INPUT' || 
            e.target.tagName === 'TEXTAREA' || 
            e.target.tagName === 'SELECT' ||
            e.target.classList.contains('connection-point')) {
            return;
        }
        
        e.preventDefault();
        e.stopPropagation();
        isDragging = false;
        pos3 = e.clientX;
        pos4 = e.clientY;
        document.onmouseup = closeDragElement;
        document.onmousemove = elementDrag;
    }
    
    function elementDrag(e) {
        e.preventDefault();
        isDragging = true;
        pos1 = pos3 - e.clientX;
        pos2 = pos4 - e.clientY;
        pos3 = e.clientX;
        pos4 = e.clientY;
        
        // Update position
        const newTop = element.offsetTop - pos2;
        const newLeft = element.offsetLeft - pos1;
        
        element.style.top = Math.max(0, newTop) + "px";
        element.style.left = Math.max(0, newLeft) + "px";
        
        // Update step position in array
        const stepData = steps.find(s => s.id === element.id);
        if (stepData) {
            stepData.x = newLeft;
            stepData.y = newTop;
        }
        
        // Redraw connections
        drawConnections();
    }
    
    function closeDragElement() {
        document.onmouseup = null;
        document.onmousemove = null;
        
        // If it was just a click (not dragging), show properties
        if (!isDragging) {
            showStepProperties(element.id);
        }
        isDragging = false;
    }
}

// Connection handlers
function addConnectionHandlers(step) {
    const connectionPoints = step.querySelectorAll('.connection-point');
    connectionPoints.forEach(point => {
        point.addEventListener('mousedown', (e) => {
            e.stopPropagation();
            const stepId = point.dataset.stepId;
            const pointType = point.dataset.point;
            
            if (pointType === 'output') {
                // Start connecting
                connectingFrom = stepId;
                point.style.background = '#4caf50';
            }
        });
        
        point.addEventListener('mouseup', (e) => {
            e.stopPropagation();
            const stepId = point.dataset.stepId;
            const pointType = point.dataset.point;
            
            if (pointType === 'input' && connectingFrom && connectingFrom !== stepId) {
                // Create connection
                connections.push({
                    from: connectingFrom,
                    to: stepId
                });
                drawConnections();
            }
            
            // Reset
            if (connectingFrom) {
                const fromStep = document.getElementById(connectingFrom);
                if (fromStep) {
                    const outputPoint = fromStep.querySelector('.connection-point.output');
                    if (outputPoint) outputPoint.style.background = 'white';
                }
            }
            connectingFrom = null;
        });
    });
}

// Draw connections
function drawConnections() {
    const svg = document.getElementById('connectionLayer');
    const canvas = document.getElementById('workflowCanvas');
    const canvasRect = canvas.getBoundingClientRect();
    
    // Clear existing lines
    const existingLines = svg.querySelectorAll('.connection-line');
    existingLines.forEach(line => line.remove());
    
    // Draw each connection
    connections.forEach((conn, index) => {
        const fromElement = document.getElementById(conn.from);
        const toElement = document.getElementById(conn.to);
        
        if (!fromElement || !toElement) return;
        
        const fromRect = fromElement.getBoundingClientRect();
        const toRect = toElement.getBoundingClientRect();
        
        const x1 = fromRect.left - canvasRect.left + fromRect.width / 2 + canvas.scrollLeft;
        const y1 = fromRect.bottom - canvasRect.top + canvas.scrollTop - 6;
        const x2 = toRect.left - canvasRect.left + toRect.width / 2 + canvas.scrollLeft;
        const y2 = toRect.top - canvasRect.top + canvas.scrollTop + 6;
        
        // Create curved path
        const midY = (y1 + y2) / 2;
        const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        path.setAttribute('class', 'connection-line');
        path.setAttribute('d', `M ${x1} ${y1} C ${x1} ${midY}, ${x2} ${midY}, ${x2} ${y2}`);
        path.style.cursor = 'pointer';
        path.dataset.index = index;
        
        // Click to delete connection
        path.addEventListener('click', () => {
            if (confirm('X√≥a k·∫øt n·ªëi n√†y?')) {
                connections.splice(index, 1);
                drawConnections();
            }
        });
        
        svg.appendChild(path);
    });
}

